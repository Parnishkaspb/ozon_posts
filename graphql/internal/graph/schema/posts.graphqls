type Post {
  id: ID!
  text: String!
  withoutComment: Boolean!
  createdAt: String!
  updatedAt: String!
  authorId: ID!
  author: User!
}

type Mutation {
    createPost(
        text: String!
        withoutComment: Boolean = false
    ): Post!
}

extend type Query {
  posts: [Post!]!
  postID(id: ID!): Post
}